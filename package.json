{
  "name": "adastra-monorepo",
  "version": "0.1.0",
  "author": "Blanklob",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=adastra-* --parallel",
    "dev:example": "turbo run dev --filter=example-* --parallel",
    "build": "turbo run build --filter=adastra-*",
    "build:example": "turbo run build --filter=example-*",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=adastra-*",
    "test:watch": "turbo run test:watch --filter=adastra-*",
    "change:add": "changeset add",
    "change:version": "changeset version",
    "change:release": "turbo run build lint test && changeset version && changeset publish",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.11.18",
    "@vitest/coverage-c8": "^0.28.4",
    "eslint": "^7.32.0",
    "eslint-config-adastra": "workspace:*",
    "prettier": "latest",
    "adastra-prettier-config": "workspace:*",
    "tsup": "^6.5.0",
    "turbo": "latest",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4"
  },
  "packageManager": "pnpm@7.26.1",
  "engines": {
    "node": ">=14.0.0"
  },
  "prettier": "adastra-prettier-config"
}
