{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputMode": "full"
    },
    "test:watch": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "lint": {},
    "check": {
      "dependsOn": ["build"],
      "outputMode": "full"
    }
  }
}
